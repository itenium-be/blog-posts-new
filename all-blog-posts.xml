---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<blog-posts>
{%- for post in site.posts %}
  <post>
    <title>{{ post.title | xml_escape }}</title>
    <author>{{ post.author | xml_escape }}</author>
    {%- if post.subTitle %}
    <subTitle>{{ post.subTitle | xml_escape }}</subTitle>
    {%- endif %}
    <date>{{ post.date | date_to_xmlschema }}</date>
    <print_date>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</print_date>
    {%- if post.last_modified_at %}
    <last_modified_at>{{ post.last_modified_at | date_to_xmlschema }}</last_modified_at>
    {%- endif %}
    <url>https://itenium.be/blog/{{ post.categories | first }}/{{ post.slug }}/</url>
    <category>{{ post.categories | first | xml_escape }}</category>
    {%- if post.tags %}
    <tags>{{ post.tags | join: "," | xml_escape }}</tags>
    {%- endif %}
    <desc>{{ post.desc | xml_escape | strip }}</desc>
    {%- if post.series %}
    <series>{{ post.series | xml_escape }}</series>
    {%- endif %}
    {%- if post.bigimg %}
    <bigimg>
      {%- if post.bigimg.url %}
      <url>{{ 'https://itenium.be/blog-posts-new/assets/blog-images/' | append: post.bigimg.url | xml_escape }}</url>
      {%- endif %}
      {%- if post.bigimg.desc %}
      <desc>{{ post.bigimg.desc | xml_escape }}</desc>
      {%- endif %}
      {%- if post.bigimg.origin %}
      <origin>{{ post.bigimg.origin | xml_escape }}</origin>
      {%- endif %}
      {%- if post.bigimg.prompt %}
      <prompt>{{ post.bigimg.prompt | xml_escape }}</prompt>
      {%- endif %}
    </bigimg>
    {%- endif %}
    {%- if post.img %}
    <img>
      {%- if post.img.url %}
      <url>{{ 'https://itenium.be/blog-posts-new/assets/blog-images/' | append: post.img.url | xml_escape }}</url>
      {%- endif %}
      {%- if post.img.desc %}
      <desc>{{ post.img.desc | xml_escape }}</desc>
      {%- endif %}
      {%- if post.img.origin %}
      <origin>{{ post.img.origin | xml_escape }}</origin>
      {%- endif %}
      {%- if post.img.title %}
      <title>{{ post.img.title | xml_escape }}</title>
      {%- endif %}
      {%- if post.img.prompt %}
      <prompt>{{ post.img.prompt | xml_escape }}</prompt>
      {%- endif %}
    </img>
    {%- endif %}
    {%- if post.toc %}
    <toc>
      {%- if post.toc.icon %}
      <icon>{{ post.toc.icon | xml_escape }}</icon>
      {%- endif %}
      {%- if post.toc.title %}
      <title>{{ post.toc.title | xml_escape }}</title>
      {%- endif %}
    </toc>
    {%- endif %}
    <excerpt><![CDATA[{{ post.excerpt }}]]></excerpt>
    {%- assign content_parts = post.content | split: "<!--block1-->" %}
    {%- if content_parts.size > 1 %}
      {%- assign before_block1 = content_parts[0] | split: "<!--more-->" %}
      {%- if before_block1.size > 1 %}
      <block1><![CDATA[{{ before_block1[1] | strip }}]]></block1>
      {%- endif %}
      <block2><![CDATA[{{ content_parts[1] | strip }}]]></block2>
    {%- else %}
      <block2><![CDATA[{{ post.content }}]]></block2>
    {%- endif %}
    {%- capture block3_content -%}
      {%- include post-series.html page=post -%}
      {%- include post-extras.html page=post -%}
      {%- include package-versions.html page=post -%}
    {%- endcapture %}
    <block3><![CDATA[{{ block3_content }}]]></block3>
  </post>
{%- endfor %}
</blog-posts>
